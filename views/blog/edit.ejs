<%- include("../partials/header") %>

<div class="container">
    <h1 style="text-align: center;">Edit <%= blog.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" value="<%= blog.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value="<%= blog.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[description]" value="<%= blog.description %>"></input>
                </div>
                <div class="form-group">
                    <button  class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>

</div>

<%- include("../partials/footer") %>
